<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RevisionApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RevisionApp.Pages">

    <TabBar>
        <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"/>
        <ShellContent
        Title="Create Account"
        ContentTemplate="{DataTemplate views:CreateAccountPage}"
        Route="CreateAccountPage"/>
    </TabBar>

    <TabBar>
       
        <Tab Title="Home"
             Icon="">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="HomePage"/>
        </Tab>

        <Tab Title="Topics"
             Icon="">

            <ShellContent
                ContentTemplate="{DataTemplate views:TopicsPage}"
                Route="TopicsPage"/>
        </Tab>

        <Tab Title="Calendar"
             Icon="">

            <ShellContent
                ContentTemplate="{DataTemplate views:CalendarPage}"
                Route="CalendarPage"/>
        </Tab>

        <Tab Title="Settings"
             Icon="">

            <ShellContent
                ContentTemplate="{DataTemplate views:SettingsPage}"
                Route="SettingsPage"/>
        </Tab>

    </TabBar>

</Shell>
