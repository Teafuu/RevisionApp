<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RevisionApp.Views"
             x:Class="RevisionApp.Pages.TopicsPage"
             Title="TopicsPage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Topics}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:TopicView
                        TopicTitle="{Binding Title}"
                        TopicDescription="{Binding Description}"
                        ControlTemplate="{StaticResource TopicViewControlTemplate}"/>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
        
        
    </VerticalStackLayout>
</ContentPage>